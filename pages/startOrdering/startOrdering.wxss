/* pages/startOrdering/startOrdering.wxss */

.header-bg {
  width: 100%;
  height: 334rpx;
  border-bottom: 1px solid #e1e1e1;
}

/* 左侧导航 */

.left-nav .nav-item {
  width: 200rpx;
  height: 436rpx;
  position: relative;
  line-height: 436rpx;
  margin: 0;
}

.left-nav .nav-item .item-img {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}

.left-nav .nav-item .item-icon {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 54rpx;
  height: 48rpx;
}

.left-nav .nav-item .item-text {
  display: inline-block;
  color: #999;
  font-size: 32rpx;
  margin-left: 90rpx;
}

.left-nav .nav-item.active .item-text {
  color: #fffffe;
}

/* 右侧列表 */

.right-list {
  width: calc(100% - 200rpx);
  /* overflow-x: hidden;
  overflow-y: auto; */
  padding: 18rpx 0 0 30rpx;
}

.right-list .list-item {
  padding: 18rpx 30rpx 18rpx 0;
  border-bottom: 1px solid #e1e1e1;
  color: #999;
  position: relative;
  height: 168rpx;
}

.right-list .list-item .item-img {
  position: absolute;
  left: 0;
  top: 18rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 5px;
}

.right-list .list-item .item-info {
  width: 270rpx;
  margin-left: 160rpx;
}

.right-list .list-item .item-name {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.right-list .list-item .item-desc {
  font-size: 16rpx;
  margin-top: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.right-list .list-item .icon-add {
  position: absolute;
  right: 30rpx;
  bottom: 18rpx;
  width: 40rpx;
  height: 40rpx;
}